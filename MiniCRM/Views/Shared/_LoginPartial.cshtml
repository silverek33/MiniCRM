@using System.Security.Principal
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
    {
    <li class="nav-item d-flex align-items-center gap-2">
        <span class="navbar-text me-2">@User.Identity?.Name</span>
        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="m-0">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-outline-secondary">Wyloguj</button>
        </form>

        @* Link do strony administracyjnej (widoczny dla Adminów lub w trybie Development) *@
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-sm btn-outline-primary" asp-controller="Admin" asp-action="Users">Panel admina</a>
        }
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
    </li>
}
</ul>
